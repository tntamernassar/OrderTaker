<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center"
            android:weightSum="4">
            <ProgressBar
                android:id="@+id/trafficChartForPriceProgress"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/gold" />
            <com.anychart.AnyChartView
                android:id="@+id/trafficChartForPrice"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp">
            </com.anychart.AnyChartView>

            <ProgressBar
                android:id="@+id/trafficChartForQuantityProgress"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/gold" />
            <com.anychart.AnyChartView
                android:id="@+id/trafficChartForQuantity"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="1"/>

            <ProgressBar
                android:id="@+id/trafficChartForPeopleProgress"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/gold" />
            <com.anychart.AnyChartView
                android:id="@+id/trafficChartForPeople"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="1"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ProgressBar
                    android:id="@+id/pieChartProgress"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/gold" />
                <com.anychart.AnyChartView
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"/>
                <ProgressBar
                    android:id="@+id/columnChartProgress"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/gold" />
                <com.anychart.AnyChartView
                    android:id="@+id/columnChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>