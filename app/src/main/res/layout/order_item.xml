<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/order_name"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="419dp"
        android:layout_x="104dp"
        android:layout_y="13dp"
        android:text="اسم المنتج"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_notes"
        android:layout_width="191dp"
        android:layout_height="42dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="419dp"
        android:layout_x="105dp"
        android:layout_y="43dp"
        android:text="ملاحظات"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/order_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="419dp"
        android:layout_x="338dp"
        android:layout_y="20dp"
        android:text="3"
        android:textAlignment="center"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/order_quantity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="419dp"
        android:layout_x="320dp"
        android:layout_y="30dp"
        android:text="x"
        android:textAlignment="center"
        android:textSize="25dp" />

    <Button
        android:id="@+id/delete_item"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_x="14dp"
        android:layout_y="24dp"
        android:background="@drawable/ic_baseline_delete_5"
        android:backgroundTint="@color/gold"
        android:scaleType="center" />

</AbsoluteLayout>