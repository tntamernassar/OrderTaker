<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_launcher_background" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_x="236dp"
        android:layout_y="226dp"
        android:text="اسم المنتج"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="564dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_x="64dp"
        android:layout_y="274dp"
        android:text=" وصف المنتج وصف المنتج وصف المنتج وصف المنتج وصف المنتج وصف المنتج وصف المنتج وصف المنتج"
        android:textAlignment="center"
        android:textSize="20dp" />



    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/increase_quantity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:fabCustomSize="40dp"
            app:backgroundTint="@color/amber"
            android:src="@drawable/ic_baseline_add_24_5_5"
            android:textAlignment="center"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView17"
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:layout_x="300dp"
            android:layout_y="334dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/decrease_quantity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:fabCustomSize="40dp"
            app:backgroundTint="@color/amber"
            android:src="@drawable/ic_baseline_remove_24_5_5"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>



    <!-- Addons scroll view handler -->?

    <ListView
        android:padding="10dp"
        android:id="@+id/addons_handler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="00dp"
        android:background="#8AF8F8F6">


    </ListView>
    <!-- Addons scroll view handler -->?


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/notes"
            android:layout_width="500dp"
            android:layout_height="93dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="ملاحظات"
            android:inputType="textMultiLine"
            android:layout_marginRight="20dp"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Submit Order"
            app:backgroundTint="@color/amber"
            app:srcCompat="@drawable/ic_baseline_done_24"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"/>

    </LinearLayout>


</LinearLayout>

</ScrollView>