<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="223dp"
        android:layout_height="187dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="14dp"
        android:layout_x="18dp"
        android:layout_y="15dp"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="87dp"
        android:layout_height="67dp"
        android:layout_marginBottom="900dp"
        android:layout_x="100dp"
        android:layout_y="315dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plus"
        app:layout_constraintStart_toEndOf="@+id/minus" />

    <TextView
        android:id="@+id/minus"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginStart="294dp"
        android:layout_marginBottom="900dp"
        android:layout_x="31dp"
        android:layout_y="315dp"
        android:text="-"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/plus"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginStart="294dp"
        android:layout_marginBottom="900dp"
        android:layout_x="185dp"
        android:layout_y="315dp"
        android:text="+"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="508dp"
        android:layout_height="65dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="186dp"
        android:layout_marginBottom="14dp"
        android:layout_x="247dp"
        android:layout_y="18dp"
        android:text="Product Name"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="501dp"
        android:layout_height="145dp"
        android:layout_marginBottom="999dp"
        android:layout_x="246dp"
        android:layout_y="86dp"
        android:text="Product Description Product Description Product Description Product Description Product Description Product Description Product Description Product Description "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="280dp"
        android:layout_x="653dp"
        android:layout_y="770dp"
        android:contentDescription="Submit Order"
        app:backgroundTint="@color/green"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/ic_baseline_done_24"
        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="575dp"
        android:layout_height="115dp"
        android:layout_x="35dp"
        android:layout_y="742dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Description"
        android:inputType="textMultiLine" />

</AbsoluteLayout>

